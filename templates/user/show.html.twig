{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div align="center">
    <div class="card card-default p-3 w-75 mt-5">
        {% if app.user and app.user.roles[0]=="ROLE_ADMIN" %}
    <h1>User</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>
    
    {{ include('user/_delete_form.html.twig') }}

    {% endif %}
    <a align="left" href="{{ path('user_index') }}" class="fs-4 text-decoration-none"><i class="fas fa-angle-double-left"></i> Back to list</a>
    </div>
</div>
{% endblock %}
