    <div class="container">
      <table class="table table-striped table-hover">
        <tbody>
          <tr>
           {% for livre in livres %}
            <td>
              <a href="{{ path('livre_show', {'id': livre.id}) }}" class="text-decoration-none"><h2><i class="fas fa-bookmark"></i> {{livre.titre}}</h2></a>
