{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
<div align="center">
    <div class="card text-white bg-dark p-3 mt-5 w-75">
    <h1>Genre index</h1>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.nom }}</td>
                <td>
                    <a style="width : 90px; height :38px;" class="btn btn-primary me-1" href="{{ path('genre_show', {'id': genre.id}) }}" role="button"><i class="fas fa-eye"></i> Show</a>
                    {% if app.user and app.user.roles[0]=="ROLE_ADMIN" %}
                    <a style="width : 80px; height :38px;" class="btn btn-warning" href="{{ path('genre_edit', {'id': genre.id}) }}" role="button"><i class="fas fa-edit"></i> Edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user and app.user.roles[0]=="ROLE_ADMIN" %}
    <div class="d-flex justify-content-center align-items-center">
        <a style="width : 150px; height :38px;" class="btn btn-primary" href="{{ path('genre_new') }}" role="button"><i class="fas fa-plus-square"></i> Create new</a>
    </div>
    {% endif %}
    </div>
</div>
{% endblock %}
